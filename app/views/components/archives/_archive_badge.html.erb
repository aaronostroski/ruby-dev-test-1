<% if archive.file.image? || archive.pdf? %>
  <% if archive.file.previewable? %>
    <%= image_tag archive.file.preview(resize_to_limit: [300, 300]), class: "h-52 w-full" %>
  <% else %>
    <%= image_tag archive.file.variant(resize_to_limit: [300, 300]), class: "h-52 w-full" %>
  <% end %>
<% elsif archive.zip? %>
  <i class="fa-solid fa-file-archive text-yellow-500 h-52 w-full"></i>
<% elsif archive.csv_or_xlsx? %>
  <i class="fa-solid fa-file-csv text-green-500 h-52 w-full"></i>
<% else %>
  <i class="fa-solid fa-file h-52 w-full"></i>
<% end %>