<div class="flex flex-col sbg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700 flex flex-col">
  <%= link_to(home_path(filters: { folder_id: folder.id }), class: "bg-gray-100 h-52 w-full flex items-center justify-center rounded-t-lg") do %>
    <i class="fa-regular fa-folder-open h-52 w-full"></i>
  <% end %>
  <div class="p-5 flex flex-col justify-between grow">
    <p class="text-md font-normal text-gray-900 font-bold dark:text-gray-400">
      <%= folder.name.truncate(25) %>
    </p>
    <p class="text-md font-normal text-gray-900 font-bold dark:text-gray-400">
      <%= folder.description.truncate(25) %>
    </p>
    <div class="flex items-center gap-x-2 mt-4">
      <%= link_to(home_path(filters: { folder_id: folder.id }), title: t('views.defaults.show')) do %>
        <i class="fa-solid fa-eye text-blue-500"></i>
      <% end %>
      <%= link_to(edit_site_folder_path(folder.id), title: t('views.defaults.edit')) do %>
        <i class="fa-solid fa-edit text-primary-500"></i>
      <% end %>
      <%= link_to(site_folder_path(folder.id), title: t("views.defaults.destroy"), data: { turbo_method: :delete, turbo_confirm: t('views.defaults.delete_confirmation') }) do %>
        <i class="fa-solid fa-trash text-red-500"></i>
      <% end %>
    </div>
  </div>
</div>