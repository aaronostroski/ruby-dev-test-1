<% color = {
  requested: "bg-blue-100 text-blue-800",
  started: "bg-yellow-100 text-yellow-800",
  finished: "bg-green-100 text-green-800",
  error: "bg-red-100 text-red-800"
}

theme = "#{color[status.to_sym]}"
%>

<span class="inline-flex self-center px-3 py-0.5 rounded-full font-medium <%= theme %>">
  <%= I18n.t("activerecord.attributes.export_file.status.#{status}") %>
</span>
